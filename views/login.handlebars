{{!-- Container for Registration / Signon Window --}}
<section class="bg-grey-lighter min-h-screen flex flex-col">
  <div class="container max-w-xl mx-auto flex-1 flex flex-col items-center justify-center px-2">
    <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
      <h1 class="mb-2 text-3xl text-center">Sign into the Blog!</h1>

{{!-- Login Section --}}

      <form id="login-form" class="form-input sm:w-1/2 column text-center max-w-md container mx-auto items-center justify-center mb-3">
        <p>Log in to your account below:</p>
        <div class="mb-4">
        <input type="text" class="shadow text-center appearance-none w-full my-3 py-2 px-3 text-gray-700 placeholder:italic" placeholder="Enter user name" required="" id="email-login" />
        <input type="password" class="form-input shadow text-center appearance-none w-full my-3 py-2 px-3 text-gray-700 placeholder:italic" placeholder="Enter user password" required="" id="password-login" />
      <div class="from-group mb-3 sm:gap-2">
        <div class="mt-3 sm:mt-0">
        <button type="submit" class="btn btn-primary w-full flex justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-black-900 bg-blue-600 hover:bg-blue-500 md:py-4 md:text-lg md:px-10">Login</button>
        </div>
      </div>
      </form>
      <a>Don't have one? Register for an account below!</a>

{{!-- Signup Section --}}

      <form id="signup-form" class="form-input sm:w-1/2 column text-center max-w-md container mx-auto items-center justify-center mb-3">
          <div class="mb-4">
          <input type="text" class="shadow text-center appearance-none w-full my-3 py-2 px-3 text-gray-700 placeholder:italic" placeholder="Enter user name" required="" id="username-signup" />
          <input type="text" class="shadow text-center appearance-none w-full my-3 py-2 px-3 text-gray-700 placeholder:italic" placeholder="Enter your email address" required="" id="email-signup" />
          <input type="password" class="shadow text-center appearance-none w-full my-3 py-2 px-3 text-gray-700 placeholder:italic" placeholder="Enter user password" required="" id="password-signup" />
            <div class="mb-3 sm:gap-2">
              <div class="mt-3 sm:mt-0">
                <button type="submit" class="w-full flex justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-black-900 bg-blue-600 hover:bg-blue-500 md:py-4 md:text-lg md:px-10">Sign Up</button>
              </div>
            </div>
          </div>
      </form>
    </div>
  </div>
</section>
<script src="/js/login.js"></script>
